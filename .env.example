# Thoughtscape Journal Configuration
# Copy this file to .env and fill in the values for your environment

#---------------------------------
# Supabase Configuration
#---------------------------------
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_KEY=your-supabase-key

#---------------------------------
# AI Provider Configuration
#---------------------------------
# Default AI provider (openai or gemini)
VITE_AI_DEFAULT_PROVIDER=gemini

# OpenAI Configuration
VITE_OPENAI_API_KEY=your-openai-api-key
VITE_OPENAI_MODEL=gpt-4o-mini
# VITE_OPENAI_ORG=your-openai-organization-id (optional)
VITE_OPENAI_BASE_URL=your-openai-base-url

# Google Gemini Configuration
VITE_GEMINI_API_KEY=your-gemini-api-key
VITE_GEMINI_MODEL=gemini-2.0-flash

#---------------------------------
# Feature Flags
#---------------------------------
# AI features (true/false)
VITE_ENABLE_AI_TITLE_GENERATION=true
# Enable automatic tag suggestions based on note content
VITE_ENABLE_AI_TAG_SUGGESTIONS=true
VITE_ENABLE_AI_CONTENT_SUMMARY=false
# Enable text formatting toolbar in note editor
VITE_ENABLE_TEXT_FORMATTING=true
